.pagination-wrapper {
  margin-top: 2rem;
  text-align: center;
}

.pagination-item {
  display: inline-block;
  padding: 0.5rem 1rem;
  margin: 0 0.25rem;
  border: 1px solid #eaecef;
  border-radius: 4px;
  color: #2c3e50;
  text-decoration: none;
  transition: all 0.2s ease;
}

.pagination-item:hover {
  background-color: #f3f4f5;
}

.pagination-item.active {
  background-color: #3eaf7c;
  border-color: #3eaf7c;
  color: white;
}

.article-info {
  margin-bottom: 1rem;
  color: #666;
  font-size: 0.9rem;
}

.article-info .date {
  margin-right: 1rem;
}